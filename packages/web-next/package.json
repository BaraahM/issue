{
  "name": "@barum/web-next",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:check": "next lint",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "playwright test",
    "ci:checks": "./scripts/ci-checks.sh",
    "ci:checks:quick": "yarn lint:check && yarn test"
  },
  "dependencies": {
    "@apollo/client": "^3.8.8",
    "@barum/plate-editor": "workspace:^",
    "@mantine/core": "^7.12.1",
    "@mantine/form": "^7.12.1",
    "@mantine/hooks": "^7.12.1",
    "@mantine/modals": "^7.12.1",
    "@mantine/notifications": "^7.12.1",
    "@supabase/supabase-js": "^2.49.4",
    "@tabler/icons-react": "^2.44.0",
    "clsx": "^2.1.1",
    "graphql": "^16.8.1",
    "lucide-react": "^0.523.0",
    "luxon": "^3.4.4",
    "mantine-datatable": "^7.3.0",
    "next": "^14.2.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^4.0.11",
    "react-icons": "^4.12.0",
    "recharts": "^2.10.3",
    "yup": "^1.3.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.2.4",
    "@testing-library/user-event": "^14.5.0",
    "@types/jest": "^29.5.5",
    "@types/luxon": "^3.3.7",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/parser": "^8.33.0",
    "eslint": "^8.53.0",
    "eslint-config-next": "^14.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/**/*.(test|spec).(ts|tsx|js|jsx)"
    ],
    "collectCoverageFrom": [
      "app/**/*.(ts|tsx)",
      "components/**/*.(ts|tsx)",
      "lib/**/*.(ts|tsx)",
      "services/**/*.(ts|tsx)",
      "!**/*.d.ts",
      "!app/layout.tsx",
      "!app/globals.css"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "cobertura",
      "html"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  }
}
